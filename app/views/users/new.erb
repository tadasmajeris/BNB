<div class="row text-center">
  <h1>Enter Your Details</h1>

    <form role="form" action='/users' method='post'>
      <div class="form-group">
        <label for='email'>
          Email: <input class="form-control" name='email' type='email'></input>
        </label>
      </div>

      <div class="form-group">
        <label for='password'>
          Password: <input class="form-control"name='password' type='password'></input>
        </label>
      </div>

      <div class="form-group">
        <label for='password_confirmation'>
          Confirm your password: <input class="form-control" name='password_confirmation' type='password'></input>
        </label>
      </div>

      <div class="form-group">
        <label for='phone_number'>
          Phone number: <input class="form-control"name='phone_number' placeholder="to receive notifications"></input>
        </label>
      </div>

      <button class="btn btn-primary" type='submit'>Sign up</button>
    </form>

</div>
